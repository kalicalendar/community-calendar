= form_with model: @event, local: true do |form|
  - if @event.errors.any?
    .div{id: "error_explanation"}
      %h3
        Sorry, #{pluralize(@event.errors.count, "error")} prohibited
        this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
      %h3 Please try again...
  %p
  .form-group
    = form.label("Title of Event")
    %br
    = form.text_field :title, class: 'form-control'
    %br
  .form-group
    = form.label("Description of Event")
    %br
    = form.text_area :description, class: 'form-control'
    %br
  .form-group
    = form.label("Event begins at")
    %br
    = form.text_field :start_time, :include_blank => true, class: 'form-control datetimepicker'
    %br
  .form-group
    = form.label("Event ends at")
    %br
    = form.text_field :end_time, :include_blank => true, class: 'form-control datetimepicker'
  %p
    = form.submit
