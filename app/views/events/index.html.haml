
%h1 All Events
= month_calendar events: @events do |date, events|
  = date.day
  - events.each do |event|
    %div
      = link_to event.title, event_path(event)
- if user_signed_in?
  =link_to 'Create new event', new_event_path, :class => 'btn btn-flat create-event'
- else
  %btn.btn-flat.create-event.hidden
%br
%h3 List of all events
%table.table.table-responsive
  - @events.each do |event|
    %tr
      %td 
        =link_to event.title, event_path(event), :class => 'link-underlined link-underlined-yellow'
      %td
        - if user_signed_in?
          =link_to 'Edit', edit_event_path(event), :class => 'btn btn-flat edit-event'
        - else
          %btn.btn-flat.edit-event.hidden
      %td
        - if user_signed_in?
          =link_to 'Delete', event_path(event), method: :delete, data:{confirm: 'Are you sure?'}, :class => 'btn btn-flat delete-event'
        - else
          %btn.btn-flat.delete-event.hidden
%div
  - if user_signed_in?
    =link_to 'Create new event', new_event_path, :class => 'btn btn-flat create-event'
  - else
    %btn.btn-flat.create-event.hidden
